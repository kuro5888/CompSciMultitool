<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7395A6"
    tools:context=".MainActivity">

<!-- Text View for Menu -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

    <TextView
        android:layout_width="match_parent"
        android:text="Select Tool:"
        android:textSize="36dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:background="#FFFFFF"
        android:layout_height="48dp"/>

    </LinearLayout>

<!--    To Do List Layout-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

    <Button
        android:id="@+id/toDo_btn"
        android:layout_width="match_parent"
        android:layout_margin="24dp"
        android:text="To Do List"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        android:background="#FFFFFF"
        android:layout_height="48dp"/>

    </LinearLayout>

<!--Binary Calculator-->
    <LinearLayout
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="24dp">

<Button
android:id="@+id/binCalc_btn"
android:layout_width="match_parent"
android:layout_margin="24dp"
android:text="Binary Calculator"
android:textSize="24dp"
android:textStyle="bold|italic"
android:background="#FFFFFF"
android:layout_height="48dp"/>

    </LinearLayout>

<!-- Hexadecimal Calculator-->
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp">

    <Button
    android:id="@+id/hexCalc_btn"
    android:layout_width="match_parent"
    android:layout_margin="24dp"
    android:text="Hexadecimal Calculator"
    android:textSize="20dp"
    android:textStyle="bold|italic"
    android:background="#FFFFFF"
    android:layout_height="48dp"/>

    </LinearLayout>

<!--Prime Number Calculator-->
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp">

    <Button
    android:id="@+id/primeNum_btn"
    android:layout_width="match_parent"
    android:layout_margin="24dp"
    android:text="Prime Number Tester"
    android:textSize="24dp"
    android:textStyle="bold|italic"
    android:background="#FFFFFF"
    android:layout_height="48dp"/>

    </LinearLayout>

</LinearLayout>